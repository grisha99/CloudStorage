<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" prefHeight="645.0" prefWidth="798.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.grishenko.storage.client.Controller">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem onAction="#menuExitClick" text="Выход" />
        </Menu>

    </MenuBar>
    <HBox spacing="5.0" VBox.vgrow="ALWAYS">
        <VBox minWidth="245.0" spacing="5.0" HBox.hgrow="ALWAYS">
         <GridPane>
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                  <Label text="Локальный компьютер" GridPane.halignment="CENTER" />
            </children>
         </GridPane>
            <HBox>
                <ComboBox fx:id="disksBox" onAction="#disksBoxAction" />
                <Button fx:id="btnLocalUp" onAction="#btnLocalUpAction" text="Вверх" />
                <TextField fx:id="localPathField" editable="false" HBox.hgrow="ALWAYS" />
            </HBox>
            <TableView fx:id="localFilesView" onContextMenuRequested="#requestPopup" onMouseClicked="#localTableMouseDblClick" VBox.vgrow="ALWAYS">
                <ContextMenu fx:id="cmTF">
                    <items>
                        <MenuItem onAction="#createFileAction" text="Создать файл" />
                        <MenuItem onAction="#createDirAction" text="Создать каталог" />
                        <MenuItem onAction="#renameAction" text="Переименовать" />
                        <MenuItem onAction="#deleteAction" text="Удалить" />
                    </items>
                </ContextMenu>
            </TableView>

        </VBox>
      <VBox fx:id="centerPanel" disable="true" HBox.hgrow="NEVER">
         <children>
      
              <GridPane minWidth="71.0" vgap="5.0" VBox.vgrow="ALWAYS">
                  <Button maxWidth="Infinity" onAction="#uploadAction" text="Upload" GridPane.valignment="BOTTOM" />
                  <Button maxWidth="Infinity" onAction="#downloadAction" text="Download" GridPane.rowIndex="1" GridPane.valignment="TOP" />
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                  <RowConstraints vgrow="ALWAYS" />
               </rowConstraints>
              </GridPane>
         </children>
      </VBox>

        <VBox fx:id="remoteSide" alignment="TOP_CENTER" minWidth="245.0" spacing="5.0" HBox.hgrow="ALWAYS">
             <GridPane vgap="5.0">
                 <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                 </rowConstraints>
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
            <children>
                    <Label text="Удаленный сервер" GridPane.halignment="CENTER" />
            </children>
             </GridPane>
            <VBox fx:id="authLayer">
               <GridPane>
                   <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                   </columnConstraints>
                   <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <children>
                      <Label text="Имя пользователя:" GridPane.columnSpan="2" GridPane.halignment="CENTER">
                     <GridPane.margin>
                        <Insets left="-140.0" />
                     </GridPane.margin>
                  </Label>
                      <TextField fx:id="userNameField" maxWidth="248.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                      <Label text="Парооль:" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets left="-190.0" />
                     </GridPane.margin>
                  </Label>
                      <PasswordField fx:id="userPassField" maxWidth="248.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                        <Button defaultButton="true" onAction="#sendAuthData" prefWidth="100.0" text="Войти" textAlignment="CENTER" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#sendRegisterAction" prefWidth="100.0" text="Регистрация" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4">
                     <GridPane.margin>
                        <Insets top="5.0" />
                     </GridPane.margin>
                  </Button>
                   </children>
               </GridPane>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            <padding>
               <Insets bottom="5.0" />
            </padding>
            </VBox>
            <VBox fx:id="workLayer" disable="true" VBox.vgrow="ALWAYS">
                <HBox>
                    <ComboBox />
                    <TextField fx:id="remotePathField" editable="false" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets left="5.0" right="5.0" />
                  </HBox.margin></TextField>
                </HBox>
                <TableView fx:id="remoteFilesView" onContextMenuRequested="#requestPopup" onMouseClicked="#remoteTableMouseDblClick" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </VBox.margin></TableView>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </VBox>

        </VBox>
    </HBox>

</VBox>
